<header class="header">

    {{> logo}}

    <nav class="header_nav ">
        <div class="header_nav_right">
            {{> nav list=header}}
        </div>
    </nav>

</header>

<main class="main">
    {{#with info}}
    <div class="info">
        <h1 class="info_title">{{title}}</h1>
        <p class="info_description">{{description}}</p>

    </div>

    {{/with}}
    {{#with form}}
    <form class="form">
        <h2 class="form_title">{{title}}</h2>
        <div class="form_input_list">
            {{#each inputs}}
            <input type="{{type}}" placeholder="{{placeholder}}" class="form_input" name="{{name}}"
                id="form_input_{{id}}">
            {{/each}}
        </div>
        <div class="form_checkbox">

            <input type="checkbox" name="{{checkbox.name}}" id="{{checkbox.name}}">
            <div></div>
            <label for="{{checkbox.name}}">{{checkbox.label}}</label>
        </div>
        <button type="submit" class="form_button">{{button}}</button>
        <div class="hr"></div>
        <p class="form_info">{{info}}</p>
    </form>
    {{/with}}

</main>
<section class="updates">
    {{#with updates}}
    <h2 class="updates_title">{{title}}</h2>
    <div class="hr"></div>
    {{#each list}}
    <div class="list_item">
        <div class="picture"></div>
        <div class="list_item_text">
            <h2 class="list_item_nickname">{{nickname}}</h2>
            <p class="list_item_description">{{description}}</p>
            <div class="hr"></div>
        </div>
    </div>
    {{/each}}
    {{#with show_all}}
    <a href="{{url}}" class="updates_link">{{text}}</a>
    {{/with}}
    {{/with}}
</section>
<section class="exp">
    {{#with expirience}}
    <h2 class="expiriense_title">{{title}}</h2>
    <div class="expirience">
        {{#each list}}
        <div>
            <strong>{{name}}</strong>
            <p>{{details}}</p>
        </div>
        {{/each}}
    </div>
    <div class="badge_hot">{{badge}}</div>
    {{/with}}
</section>




<footer class="footer">

    <div>
        {{> logo}}
        <span class="footer_copyright">Copyright 2023-2024</span>
    </div>
    {{#each footer}}
    <div>
        <span class="footer_title">{{title}}</span>
        {{>nav list=links isVertical=true}}
    </div>
    {{/each}}
</footer>